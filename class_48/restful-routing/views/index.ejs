<body>
    <h1>list all the comments:</h1>

    <% for(let item of comments){ %>
        <h2> <%=item.id %></h2>
        <h3> <%=item.username %></h3>
        <h4> <%=item.comment %></h4>
        <form action="/comments/<%=item.id%>?_method=DELETE" method="POST">
            <button>DELETE</button>
        </form>
  <%  } %>
    
</body>
</html>